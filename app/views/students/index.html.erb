<%= render "students/welcome" %>



<h2>Students</h2>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Grade</th>
      <th>Teacher</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.grade %></td>
        <td><%= student.teacher %></td>
        <td><%= student.user_id %></td>
        <td><%= link_to 'Show', student %></td>
        <td><%= link_to 'Edit', edit_student_path(student) %></td>
        <td><%= link_to 'Delete', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'New Note', new_note_path %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>
